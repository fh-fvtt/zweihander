<div class="fortunetracker-container flexrow">
  {{#unless waiting}}
    {{#if params.compact}}
    <a class="fortune-tracker-fortune-trigger fortune-tracker-text-fortune">{{localize "ZWEI.rolls.fortune"}}: {{fortune.value}}</a> 
    <a class="fortune-tracker-misfortune-trigger fortune-tracker-text-misfortune">Misfortune {{misfortune.value}}</a>
    {{else}}
    <div class="fortunetracker-token-container">
      {{#each fortune.positions}}
      <a class="fortune-tracker-fortune-trigger">
        <div class="fortunetracker-life" data-tooltip="{{localize "ZWEI.othermenues.currentfortune"}}: {{../fortune.value}}" data-tooltip-direction="LEFT" style="background-image: url('{{../fortune.path}}'); height: {{../params.tokenSize}}px; width: {{../params.tokenSize}}px; top: {{this.t}}px; left: {{this.l}}px"></div>
      </a>
      {{/each}}
    </div>
    <div class="fortunetracker-token-container">
      {{#each misfortune.positions}}
      <a class="fortune-tracker-misfortune-trigger">
        <div class="fortunetracker-death" data-tooltip="{{localize "ZWEI.othermenues.currentmisfortune"}}: {{../misfortune.value}}" data-tooltip-direction="RIGHT" style="background-image: url('{{../misfortune.path}}'); height: {{../params.tokenSize}}px; width: {{../params.tokenSize}}px; top: {{this.t}}px; left: {{this.l}}px"></div>
      </a>
      {{/each}}
    </div>
    {{/if}}
  {{else}}
    <span id="fortuneTrackerAppWaiting"><i class="fas fa-sync-alt"></i>{{localize "ZWEI.othermenues.gmconnect"}}</span>
  {{/unless}}
</div>