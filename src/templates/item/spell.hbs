      name="{{zhLocalizePath 'system.rules.effect'}}"
      value="{{zhLocalize system.rules.effect}}"
      toggled="true"
    >
      {{{html.rules.effect}}}
    </prose-mirror>
  </div>

  <div class="form-group stacked">
    <label>{{localize "ZWEI.chatskill.criticalsuccess"}}</label>
    <prose-mirror
      name="{{zhLocalizePath 'system.rules.criticalSuccess'}}"
      value="{{zhLocalize system.rules.criticalSuccess}}"
      toggled="true"
    >
      {{{html.rules.criticalSuccess}}}
    </prose-mirror>
  </div>

  <div class="form-group stacked">
    <label>{{localize "ZWEI.chatskill.criticalfailure"}}</label>
    <prose-mirror
      name="{{zhLocalizePath 'system.rules.criticalFailure'}}"
      value="{{zhLocalize system.rules.criticalFailure}}"
      toggled="true"
    >
      {{{html.rules.criticalFailure}}}
    </prose-mirror>
  </div>
</fieldset>