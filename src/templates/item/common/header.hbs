<header class="sheet-header flexrow">
  <div class="profile">
    <div class="profile-image {{zhItemImageClass img}}" style="{{zhItemImageStyle img}}"></div>
  </div>
  <div class="header-details flexrow">
    <h1 class="itemname">
      <input
        name="name"
        type="text"
        value="{{name}}"
        placeholder="{{localize 'ZWEI.actor.details.placeholders.name'}} ({{localize (zhConcat 'TYPES.Item.' type)}})"
      />
    </h1>
    <div class="item-subtitle">
      {{localize (zhConcat "TYPES.Item." type)}}
    </div>
  </div>
</header>