<fieldset>
  <legend>{{localize "ZWEI.actor.items.incapacity"}}</legend>
  <div class="form-group stacked">
    <label>{{localize "ZWEI.actor.items.effect"}}</label>
    <prose-mirror
      name="{{zhLocalizePath 'system.rules.effect'}}"
      value="{{zhLocalize system.rules.effect}}"
      toggled="true"
    >
      {{{html.rules.effect}}}
    </prose-mirror>
  </div>
  {{#if actor}}
    <div class="form-group">
      <label>{{localize "ZWEI.actor.items.recuperationtimeindays"}}</label>
      <input name="system.recuperationTime" type="number" value="{{system.recuperationTime}}" />
    </div>

    <div class="form-group stacked">
      <label>{{localize "ZWEI.actor.items.ineffect"}}</label>
      <input name="system.active" type="checkbox" class="link-checkbox" {{checked system.active}} />
    </div>
  {{/if}}
</fieldset>

<fieldset>
  <legend>{{localize "ZWEI.actor.items.misc"}}</legend>
  <div class="form-group">
    <label>{{localize "ZWEI.actor.items.severity"}}</label>
    <select name="system.severity">
      {{#each choices.severities}}
        <option value="{{value}}" {{selected}}>{{localize (zhConcat "ZWEI.actor.items.injuryseverity." label)}}</option>
      {{/each}}
    </select>
  </div>
</fieldset>