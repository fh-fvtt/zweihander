{{#unless limited}}
  <div class="tab {{tab.id}} {{tab.cssClass}} decal-target flexcol" data-group="{{tab.group}}" data-tab="{{tab.id}}">
    {{#if tab.headerTemplate}}{{> ($$ tab.headerTemplate) .}}{{/if}}
    {{> ($$ "partials/items-list") listItems=tab.itemGroups}}
    {{#if tab.footerTemplate}}{{> ($$ tab.footerTemplate) .}}{{/if}}
  </div>
{{/unless}}